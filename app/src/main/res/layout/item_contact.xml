<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_view_holder"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:transitionName="avatarTransition"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_all_m"
        android:layout_marginTop="@dimen/margin_all_m"
        android:layout_marginBottom="@dimen/margin_all_m"
        tools:src="@drawable/ic_contact_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barrier"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contactNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_all_size_xl"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/margin_all_l"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_item_user_xs"
        android:layout_marginEnd="@dimen/margin_item_user_xxm"
        tools:text="John Smith"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintEnd_toStartOf="@id/deleteImageViewButton"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contactCarrierTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_all_size_s"
        android:layout_marginEnd="@dimen/margin_item_user_xxm"
        tools:text="Carrier"
        app:layout_constraintTop_toBottomOf="@id/contactNameTextView"
        app:layout_constraintStart_toStartOf="@id/contactNameTextView"
        app:layout_constraintEnd_toStartOf="@id/deleteImageViewButton"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/deleteImageViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_item_user_xxm"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="avatar,contactCarrierTextView"
        app:barrierDirection="bottom"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@id/barrier"/>
</androidx.constraintlayout.widget.ConstraintLayout>